<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="SqlFroega.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:SqlFroega.Converters"
    xmlns:local="using:SqlFroega">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="AppAccentColor">#FF4AA3FF</Color>


            <SolidColorBrush x:Key="SystemAccentColor" Color="{StaticResource AppAccentColor}" />
            <SolidColorBrush x:Key="SystemAccentColorLight1" Color="#FF7BBEFF" />
            <SolidColorBrush x:Key="SystemAccentColorLight2" Color="#FFAAD6FF" />
            <SolidColorBrush x:Key="SystemAccentColorLight3" Color="#FFD6ECFF" />
            <SolidColorBrush x:Key="SystemAccentColorDark1" Color="#FF2E7FD9" />
            <SolidColorBrush x:Key="SystemAccentColorDark2" Color="#FF2467B1" />
            <SolidColorBrush x:Key="SystemAccentColorDark3" Color="#FF1C4F86" />


            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{ThemeResource CardBackgroundColor}" />
            <Color x:Key="CardBackgroundColor">Transparent</Color>

            <!-- Hellblau Light Mode -->
            <SolidColorBrush x:Key="AppPageBackgroundBrush"
                     Color="{ThemeResource AppPageBackgroundColor}" />

            <Color x:Key="AppPageBackgroundColor">#F2F8FF</Color>

            <!-- Cards -->
            <SolidColorBrush x:Key="AppCardBrush"
                     Color="{ThemeResource AppCardColor}" />

            <Color x:Key="AppCardColor">#FFFFFFFF</Color>

            <!-- Border Light Blue -->
            <SolidColorBrush x:Key="AppCardBorderBrush"
                     Color="#D0E7FF"/>

            <converters:BooleanNegationConverter x:Key="BooleanNegationConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
        
        </ResourceDictionary>
        
    </Application.Resources>
</Application>

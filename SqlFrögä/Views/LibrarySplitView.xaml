<Page
    x:Class="SqlFroega.Views.LibrarySplitView"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:SqlFroega.ViewModels"
    xmlns:models="using:SqlFroega.Application.Models"
    Background="{ThemeResource AppPageBackgroundBrush}">

    <Page.DataContext>
        <vm:LibrarySplitViewModel />
    </Page.DataContext>
    
    

    <Grid Padding="16" ColumnSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="440"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Search -->
        <Grid Grid.Column="0"
                Background="{ThemeResource AppPaneBackgroundBrush}"
                CornerRadius="16"
                Padding="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="SqlFrögä" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="T-SQL Script Library" Opacity="0.75"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Admin">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Kunden-Mapping Verwaltung"
                                            Click="CustomerMappingAdmin_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>

                <Button Grid.Column="2"
                        Content="New"
                        Command="{Binding NewCommand}"/>
            </Grid>

            <!-- Search bar -->
            <Border Grid.Row="1"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Padding="12">
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             PlaceholderText="Suche (Name, Beschreibung, Content)…"
                             Text="{Binding QueryText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             KeyDown="QueryTextBox_KeyDown"/>

                    <Button Grid.Column="1"
                            Content="Search"
                            Command="{Binding SearchCommand}"/>
                </Grid>
            </Border>

            <Expander Grid.Row="2" Header="Filter" IsExpanded="True">
                <Grid Padding="0,10,0,0" RowSpacing="8" ColumnSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Row="0" Grid.Column="0" SelectedIndex="{Binding ScopeFilterIndex, Mode=TwoWay}">
                        <ComboBoxItem Content="Scope: Alle"/>
                        <ComboBoxItem Content="Scope: Global"/>
                        <ComboBoxItem Content="Scope: Customer"/>
                        <ComboBoxItem Content="Scope: Module"/>
                    </ComboBox>

                    <TextBox Grid.Row="0" Grid.Column="1"
                             PlaceholderText="Module"
                             Text="{Binding ModuleFilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Grid.Row="1" Grid.Column="0"
                             PlaceholderText="CustomerId (GUID)"
                             Text="{Binding CustomerIdFilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Grid.Row="1" Grid.Column="1"
                             PlaceholderText="Tags, komma-getrennt"
                             Text="{Binding TagsFilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                             PlaceholderText="Objektsuche (z. B. om_adkont_sql, om_adkont_sql.TestSpalte oder om.om_adkont_sql)"
                             Text="{Binding ObjectFilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <CheckBox Grid.Row="3" Grid.Column="0"
                              Content="Gelöschte Datensätze anzeigen (Temporal)"
                              IsChecked="{Binding IncludeDeleted, Mode=TwoWay}"/>

                    <CheckBox Grid.Row="3" Grid.Column="1"
                              Content="Auch in History-Versionen suchen"
                              IsChecked="{Binding SearchInHistory, Mode=TwoWay}"/>


                    <Expander Grid.Row="4" Grid.ColumnSpan="2" Header="Tag- &amp; Modul-Katalog" IsExpanded="True">
                        <StackPanel Spacing="8" Padding="0,8,0,0">
                            <Button Content="Katalog aktualisieren" HorizontalAlignment="Left" Command="{Binding RefreshCatalogCommand}"/>

                            <TextBlock Text="Module" FontWeight="SemiBold"/>
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox PlaceholderText="Neues Modul" Text="{Binding NewModuleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Grid.Column="1" Content="Hinzufügen" Command="{Binding AddModuleCommand}"/>
                            </Grid>
                            <ListView ItemsSource="{Binding AvailableModules}" SelectionMode="None" MaxHeight="160">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnSpacing="6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Content="{Binding}" HorizontalAlignment="Stretch"
                                                    Command="{Binding DataContext.ApplyModuleFilterCommand, ElementName=RootPage}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Grid.Column="1" Content="✕" Tag="{Binding}" Click="DeleteModuleButton_Click"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <TextBlock Text="Tags" FontWeight="SemiBold"/>
                            <ListView ItemsSource="{Binding AvailableTags}" SelectionMode="None" MaxHeight="160">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" HorizontalAlignment="Stretch"
                                                Command="{Binding DataContext.ToggleTagFilterCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Expander>
                </Grid>
            </Expander>

            <!-- Results -->
            <Border Grid.Row="3"
                    CornerRadius="12"
                    BorderThickness="1"
                    Background="{ThemeResource AppCardBrush}"
                    BorderBrush="{ThemeResource AppCardBorderBrush}"
                    Padding="12">
                <Grid RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ProgressRing Width="20" Height="20" IsActive="{Binding IsBusy}" />
                        <TextBlock Grid.Column="1" Text="{Binding ResultsCountText}" VerticalAlignment="Center" Opacity="0.8"/>
                    </Grid>

                    <ListView x:Name="ResultsList" Grid.Row="1"
                              ItemsSource="{Binding Results}"
                              SelectedItem="{Binding Selected, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:ScriptListItem">
                                <Border CornerRadius="10"
                                        BorderThickness="1"
                                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                        Background="{ThemeResource AppCardBrush}"
                                        Padding="10"
                                        Margin="0,0,0,8">
                                    <Grid ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="{Binding Key}" Opacity="0.7" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Description}" Opacity="0.8" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding DeletedLabel}" Foreground="Tomato" FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <!-- Edit/Delete per CommandParameter -->
                                            <Button Content="Edit"
                                                    Command="{Binding DataContext.EditCommand, ElementName=ResultsList}"
                                                    CommandParameter="{Binding Id}"/>
                                            <Button Content="Delete"
                                                    Click="DeleteButton_Click"
                                                    Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Error -->
            <TextBlock Grid.Row="4"
                       Text="{Binding Error}"
                       Foreground="Tomato"
                       TextWrapping="WrapWholeWords"/>
        </Grid>

        <!-- RIGHT: Detail -->
        <Border Grid.Column="1"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                Padding="0"
                Background="{ThemeResource AppCardBrush}">
            <Grid>
                <Frame x:Name="DetailFrame"/>
            </Grid>
        </Border>
    </Grid>
</Page>
